{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": "Projets du portfolio"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text",
      "maxLength": 200
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "technologies": {
      "type": "json"
    },
    "githubUrl": {
      "type": "string"
    },
    "liveUrl": {
      "type": "string"
    },
    "startDate": {
      "type": "date"
    },
    "endDate": {
      "type": "date"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "in-progress", "completed", "archived"],
      "default": "draft"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.hero",
        "sections.services",
        "sections.contact"
      ]
    }
  }
} 