---
import LenisProvider from '../components/LenisProvider.astro';
import ScrollAnimations from '../components/ScrollAnimations.astro';
import PageTransition from '../components/PageTransition.astro';
import PageLoader from '../components/PageLoader.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  loaderImageUrl?: string;
  pageType?: 'home' | 'projects' | 'single-project' | 'about' | 'contact';
}

const { 
  title, 
  description = "Site web moderne créé avec Astro et Tailwind CSS",
  loaderImageUrl = '',
  pageType = 'home'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    

    
    <script>
      // Initialiser GSAP globalement
      import { gsap } from 'gsap';
      window.gsap = gsap;
    </script>
  </head>
  <body class="bg-primary text-secondary">
    <PageLoader imageUrl={loaderImageUrl} pageType={pageType} />
    <!-- <PageTransition /> -->
    <LenisProvider />
    <ScrollAnimations />
    <main id="swup">
      <slot />
    </main>
  </body>
</html> 