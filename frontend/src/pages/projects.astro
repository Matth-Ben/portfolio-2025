---
import Layout from '../layouts/Layout.astro';
import { fetchProjects } from '../utils/strapi';
import { getLoaderData } from '../utils/loaderImages';
import ProjectCard from '../components/ProjectCard.astro';

const projects = await fetchProjects();
const loaderData = await getLoaderData('projects');
---

<Layout 
  title="Projets - Portfolio" 
  description="Découvrez tous mes projets et réalisations"
  loaderImageUrl={loaderData.imageUrl}
  pageType="projects"
>
  <main class="min-h-screen bg-gray-50">
    <!-- Header -->
    <section class="bg-white border-b">
      <div class="container mx-auto px-4 py-16">
        <div class="text-center">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">Mes Projets</h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Découvrez l'ensemble de mes réalisations, de la conception à la mise en production
          </p>
        </div>
      </div>
    </section>

    <!-- Projects Grid -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        {projects.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((project) => (
              <ProjectCard project={project} />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="text-gray-400 mb-4">
              <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun projet trouvé</h3>
            <p class="text-gray-500">Les projets seront bientôt disponibles</p>
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>