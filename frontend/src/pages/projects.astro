---
import Layout from '../layouts/Layout.astro';
import SEO from '../components/SEO.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { fetchProjects, STRAPI_PUBLIC_URL } from '../utils/strapi';

// Récupérer tous les projets depuis Strapi
const projects = await fetchProjects();

// Générer les métadonnées SEO pour la page archive
const seoData = {
  title: "Projets",
  description: "Découvrez mes projets de développement web, applications et sites créés avec les dernières technologies.",
  keywords: "projets, portfolio, développement web, applications, sites web, full-stack",
  type: "website" as const,
  image: "/images/projects-og.jpg"
};
---

<Layout title="Projets">
  <SEO {...seoData} />
  
  <main class="container mx-auto px-4 py-8">
    <!-- Header -->
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Mes Projets</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Découvrez une sélection de mes projets de développement web, 
        applications et sites créés avec passion et expertise.
      </p>
    </header>

    <!-- Filtres -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-4 justify-center">
        <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
          Tous
        </button>
        <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
          Web
        </button>
        <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
          Mobile
        </button>
        <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
          Applications
        </button>
      </div>
    </div>

    <!-- Grille des projets -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects && projects.length > 0 ? (
        projects.map((project) => (
          <ProjectCard project={project} strapiUrl={STRAPI_PUBLIC_URL} />
        ))
      ) : (
        <div class="col-span-full text-center py-12">
          <p class="text-gray-500 text-lg">Aucun projet disponible pour le moment.</p>
          <p class="text-gray-400 text-sm mt-2">
            Vérifiez que Strapi est démarré et que la collection "Project" existe.
          </p>
          <p class="text-gray-400 text-sm mt-1">
            Erreur 404: L'endpoint /api/projects n'existe pas.
          </p>
        </div>
      )}
    </div>
  </main>
</Layout> 