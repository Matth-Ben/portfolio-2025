---
import type { ServicesSection } from '../../utils/strapi';

interface Props {
  section: ServicesSection;
}

const { section } = Astro.props;

// Couleurs pour les icônes des services
const serviceColors = {
  blue: { bg: 'bg-blue-100', text: 'text-blue-600' },
  green: { bg: 'bg-green-100', text: 'text-green-600' },
  purple: { bg: 'bg-purple-100', text: 'text-purple-600' },
  red: { bg: 'bg-red-100', text: 'text-red-600' },
  yellow: { bg: 'bg-yellow-100', text: 'text-yellow-600' },
  indigo: { bg: 'bg-indigo-100', text: 'text-indigo-600' }
};
---

<section id="services" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 fade-in">
        {section.title || 'Nos Services'}
      </h2>
      {section.subtitle && (
        <p class="text-xl text-gray-600 max-w-2xl mx-auto fade-in">
          {section.subtitle}
        </p>
      )}
    </div>

    {section.services && section.services.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {section.services.map((service) => {
          const colors = serviceColors[service.color] || serviceColors.blue;
          return (
            <div class="bg-gray-50 p-8 rounded-xl hover:shadow-lg transition-shadow slide-in">
              <div class={`w-16 h-16 ${colors.bg} rounded-lg flex items-center justify-center mb-6`}>
                {service.icon ? (
                  <span class="text-2xl">{service.icon}</span>
                ) : (
                  <svg class={`w-8 h-8 ${colors.text}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-4">{service.title}</h3>
              {service.description && (
                <p class="text-gray-600">{service.description}</p>
              )}
            </div>
          );
        })}
      </div>
    ) : (
      <div class="text-center text-gray-500">
        <p>Aucun service configuré pour le moment.</p>
      </div>
    )}
  </div>
</section> 